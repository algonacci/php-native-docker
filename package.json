{
  "name": "php-native-docker-assets",
  "private": true,
  "scripts": {
    "build:css": "sass --load-path=node_modules assets/scss/app.scss public/assets/css/app.css --style=expanded --no-source-map --quiet-deps --silence-deprecation=import,global-builtin,color-functions,if-function",
    "watch:css": "sass --watch --load-path=node_modules assets/scss/app.scss:public/assets/css/app.css --style=expanded --no-source-map --quiet-deps --silence-deprecation=import,global-builtin,color-functions,if-function"
  },
  "devDependencies": {
    "bootstrap": "5.3.8",
    "sass": "^1.93.0"
  }
}
